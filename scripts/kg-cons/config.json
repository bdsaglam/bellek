{
  "seed": 42,
  "dataset": {
    "train": {
      "split": "train"
    },
    "eval": {
      "split": "dev[:1%]"
    }
  },
  "base_model_id": "NousResearch/llama-2-7b-chat-hf",
  "model_loading": {
    "use_flash_attention_2": true,
    "quantization_config": {
      "load_in_8bit": true,
      "load_in_4bit": false,
      "bnb_4bit_compute_dtype": "bf16",
      "bnb_4bit_quant_type": "nf4",
      "bnb_4bit_use_double_quant": false
    }
  },
  "trainer": {
    "max_seq_length": 600,
    "packing": false,
    "lora": {
      "lora_alpha": 16,
      "lora_dropout": 0.1,
      "r": 64,
      "bias": "none",
      "task_type": "CAUSAL_LM"
    },
    "training_args": {
      "bf16": true,
      "fp16": false,
      "group_by_length": true,
      "per_device_train_batch_size": 2,
      "gradient_accumulation_steps": 4,
      "gradient_checkpointing": false,
      "max_grad_norm": 0.3,
      "weight_decay": 0.001,
      "learning_rate": 0.0002,
      "lr_scheduler_type": "cosine",
      "warmup_ratio": 0.03,
      "optim": "paged_adamw_8bit",
      "max_steps": -1,
      "num_train_epochs": 1,
      "logging_steps": 25,
      "save_steps": 0,
      "report_to": "wandb"
    }
  },
  "evaluation": {
    "max_new_tokens": 256,
    "batch_size": 2
  },
  "wandb": {
    "mode": "online",
    "entity": "bdsaglam",
    "project": "thesis-kgcons"
  },
  "hfhub": {
    "model_id": "bdsaglam/llama-2-7b-chat-hf-kg-cons"
  }
}